endif

installcheck:

uninstall:
ifneq "$(MAKEFLAGS)" ""
	$(MAKE) -f Makefile-perl -$(MAKEFLAGS) myuninstall
else
	$(MAKE) -f Makefile-perl myuninstall
endif


